  <script>
    document.getElementById('anio').textContent = new Date().getFullYear();
    // Rellenar autom√°ticamente el campo "C√≥digo o producto" al pulsar una tarjeta
    document.querySelectorAll('[data-code]').forEach(function(btn){
      btn.addEventListener('click', function(){
        var code = this.getAttribute('data-code');
        document.getElementById('codigo').value = code;
        window.location.hash = '#pedidos';
        document.getElementById('cantidad').focus();
      });
    });

    // WhatsApp (pendiente): cuando nos des el n√∫mero, activamos esta parte
    document.getElementById('formPedido').addEventListener('submit', function(e){
      e.preventDefault();
      var wsp  = document.getElementById('wspNumber').value.trim();
      if(!wsp){ alert('El env√≠o por WhatsApp quedar√° activo cuando agreguemos el n√∫mero.'); return; }
      var nombre = encodeURIComponent(document.getElementById('nombre').value.trim());
      var tel    = encodeURIComponent(document.getElementById('telefono').value.trim());
      var codigo = encodeURIComponent(document.getElementById('codigo').value.trim());
      var cant   = encodeURIComponent(document.getElementById('cantidad').value.trim());
      var com    = encodeURIComponent(document.getElementById('comentarios').value.trim());
      var texto = `Hola, soy ${nombre}. Quiero pedir ${cant} pieza(s) del ${codigo}. Mi WhatsApp: ${tel}. ${com ? 'Comentarios: '+com : ''}`;
      var url = `https://wa.me/${wsp}?text=${texto}`; window.open(url, '_blank');
    });

    // Correo (pendiente): cuando nos des el email, lo activamos
    document.getElementById('btnCorreo').addEventListener('click', function(){
      alert('El env√≠o por correo quedar√° activo cuando agreguemos el email.');
    });
  </script>
